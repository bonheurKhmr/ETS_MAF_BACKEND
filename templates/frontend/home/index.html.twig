{% extends 'frontend/base.html.twig' %}

{% block title %}Acceuil{% endblock %}

{% block body %}
<div class="bg-blue-100">
    <div class="max-w-screen-sm mx-auto py-10">
        <h2 class="text-primary font-bold text-2xl my-3"> Nos Services </h2>
        <div class="flex gap-3">
            {% for service in services %}
            <twig:Front:Card:Card class="!bg-primary/10 !border-primary transition-all hover:bg-primary/50 cursor-pointer">
                <twig:Front:Card:CardBody>
                    <p class="font-bold">{{ service.service }}</p>
                </twig:Front:Card:CardBody>
            </twig:Front:Card:Card>
            {% endfor %}
        </div>
    </div>
</div>
{{ include('/frontend/includes/_content.html.twig', {'sousMenus': sousMenus}) }}
{% endblock %}