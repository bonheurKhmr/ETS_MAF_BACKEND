{% extends 'frontend/base.html.twig' %}

{% block title %}Acceuil{% endblock %}

{% block body %}
<div class="bg-blue-100">
    <div class="max-w-screen-sm mx-auto py-10 px-3">
        <h2 class="text-primary font-bold text-2xl mb-3"> Nos Services </h2>
        <div class="sm:grid grid-cols-4 gap-3">
            {% for service in services %}
            <twig:Front:Card:Card class="!border-blue-200 transition-all hover:bg-blue-100 cursor-pointer my-3 hover:scale-95 hover:shadow-5 !bg-blue-50">
                <twig:Front:Card:CardBody>
                    <p class="font-bold">{{ service.service }}</p>
                </twig:Front:Card:CardBody>
            </twig:Front:Card:Card>
            {% endfor %}
        </div>
    </div>
</div>
{{ include('/frontend/includes/_content.html.twig', {'sousMenus': sousMenus}) }}
{% endblock %}