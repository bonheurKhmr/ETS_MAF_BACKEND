{% extends 'base.html.twig' %}

{% block title %}Menu{% endblock %}

{% block body %}
    <h1>Menu</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ menu.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ menu.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ menu.description }}</td>
            </tr>
            <tr>
                <th>Icon</th>
                <td>{{ menu.icon }}</td>
            </tr>
            <tr>
                <th>Is_activated</th>
                <td>{{ menu.isActivated ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ menu.createdAt ? menu.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ menu.updatedAt ? menu.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Orders</th>
                <td>{{ menu.orders }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_menu_index') }}">back to list</a>

    <a href="{{ path('app_admin_menu_edit', {'id': menu.id}) }}">edit</a>

    {{ include('admin/menu/_delete_form.html.twig') }}
{% endblock %}
