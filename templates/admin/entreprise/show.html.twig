{% extends 'base.html.twig' %}

{% block title %}entreprise
{% endblock %}

{% block body %}
	<twig:Brodcump firstlink="app_admin_entreprise_index" firstlabel="Liste" pageactuel="Voir"/>

	<twig:Card:Card>
		<twig:Card:Header>
			<twig:H1>entreprise
				{{ entreprise.name }}
			</twig:H1>
		</twig:Card:Header>

		<twig:Card:Body class="p-3">
			<twig:Table :action="false">
				<tbody>
					<twig:Tr>
						<th>Logo</th>
						<twig:Td><img class="w-7 h-7 border border-primary rounded-md p-1" src="{{ vich_uploader_asset(entreprise, "logoFile") }}" alt="{{ entreprise.name }}">
						</twig:Td>
					</twig:Tr>

					<twig:Tr>
						<th>name</th>
						<twig:Td>{{ entreprise.name }}</twig:Td>
					</twig:Tr>

					<twig:Tr>
						<th>litle name</th>
						<twig:Td>{{ entreprise.litleName }}</twig:Td>
					</twig:Tr>

					<twig:Tr>
						<th>Activated</th>
						<twig:Td>
							{% if entreprise.activated %}
								<twig:Badget type="primary">
									activé
								</twig:Badget>
							{% else %}
								<twig:Badget type="danger">
									non activé
								</twig:Badget>
							{% endif %}
						</twig:Td>
					</twig:Tr>
				</tbody>
			</twig:Table>
		</twig:Card:Body>

		<twig:Card:Footer class="flex items-center gap-2 p-3">
			<twig:Action:Edit href="{{ path('app_admin_entreprise_edit', {'id': entreprise.id}) }}"/>
			{{ include('admin/entreprise/_delete_form.html.twig') }}
		</twig:Card:Footer>
	</twig:Card:Card>
{% endblock %}
