{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
<twig:Brodcump firstLink="app_admin_contact_index" firstLabel="Liste" pageActuel="Voir" />

<twig:Card:Card>
    <twig:Card:Header>
        <twig:H1>contact {{ contact.label }} </twig:H1>
    </twig:Card:Header>

    <twig:Card:Body class="p-3">
        <table class="table">
            <tbody>
                <tr>
                    <th>Icon</th>
                    <td>
                        <div class="w-4 h-4">{{ contact.icon | raw }}</div>
                    </td>
                </tr>
                <tr>
                    <th>Label</th>
                    <td>{{ contact.label }}</td>
                </tr>
                <tr>
                    <th>Contact</th>
                    <td>{{ contact.contact }}</td>
                </tr>
            </tbody>
        </table>
    </twig:Card:Body>

    <twig:Card:Footer class="flex items-center gap-2 p-3">
        <twig:Action:Edit href="{{ path('app_admin_contact_edit', {'id': contact.id}) }}" />
        {{ include('admin/contact/_delete_form.html.twig') }}
    </twig:Card:Footer>
</twig:Card:Card>
{% endblock %}